{
  "name": "gd-express-ms",
  "version": "0.1.16",
  "description": "Utilities to bootstrap a express based microservice",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "prestart": "npm run lint && tsc",
    "test": "jest --coverage",
    "devtest": "jest --coverage --watch",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run prestart",
    "postversion": "git push --tags && npm run build && npm publish"
  },
  "author": {
    "name": "Guido Doumen",
    "email": "git@doumen-laumen.de"
  },
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.20.0",
    "gd-eventlog": "^0.1.27",
    "on-finished": "^2.4.1",
    "prom-client": "^15.1.3",
    "sniffr": "^1.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^22.4.1",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.2",
    "jest-express": "^1.12.0",
    "nodemon": "^3.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  },
  "files": [
    "lib/"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "directories": {
    "example": "./sample",
    "lib": "./src"
  },
  "repository": {
    "type": "git",
